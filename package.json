{
    "name": "tutch-component",
    "version": "0.1.0",
    "description": "CodeMirror-based editor environment for Tutch.",
    "main": "dist/index.js",
    "types": "dist/index.d.js",
    "scripts": {
        "prettier": "prettier --write **/*.json src/*.ts src/*.tsx src/**/*.ts src/**/*.tsx",
        "tsc": "tsc",
        "watch": "webpack-dev-server",
        "build": "tsc",
        "start": "npm-run-all demo:worker watch",
        "demo:worker": "copyfiles -f node_modules/tutch-worker/worker.js demo"
    },
    "files": [
        "/dist/**/*",
        "/demo/tutch.css"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/retutch/tutch-component.git"
    },
    "author": "Chris Martens and Rob Simmons",
    "license": "GPL-3.0",
    "dependencies": {
        "tutch-worker": "^0.1.1"
    },
    "devDependencies": {
        "@types/codemirror": "0.0.76",
        "awesome-typescript-loader": "^5.2.1",
        "codemirror": "^5.48.4",
        "copyfiles": "^2.1.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.17.1",
        "typescript": "^3.6.2",
        "webpack": "^4.35.0",
        "webpack-cli": "^3.3.8",
        "webpack-dev-server": "^3.8.0"
    },
    "prettier": {
        "printWidth": 110,
        "tabWidth": 4,
        "singleQuote": true,
        "trailingComma": "es5"
    }
}
